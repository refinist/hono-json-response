{
  "name": "hono-json-response",
  "version": "0.0.2",
  "description": "A Hono middleware for standardized JSON responses",
  "homepage": "https://github.com/refinist/hono-json-response",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refinist/hono-json-response.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "prettier --write .",
    "lint": "eslint",
    "lint:fix": "pnpm lint --fix",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc -b tsconfig.json"
  },
  "prettier": "@refinist/prettier-config",
  "devDependencies": {
    "@refinist/eslint-config": "^0.0.3",
    "@refinist/prettier-config": "^0.0.4",
    "@vitest/coverage-v8": "^3.2.2",
    "bumpp": "^10.1.1",
    "eslint": "^9.28.0",
    "hono": "^4.7.11",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "hono": "*"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
